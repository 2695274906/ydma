<body>

<!-- 页头开始 -->
	<div th:replace="head_black"></div>
	<div class="bindHintBox js-bindHintBox hide">
		<div class="pr">
			为了账号安全，请及时绑定邮箱和手机 <a href="javascript:;" class="ml20 color-red"
				target="_blank">立即绑定</a>
			<button class="closeBindHint js-closeBindHint" type="button"></button>
			<div class="arrow"></div>
		</div>
	</div>

	<div id="main">

		<div class='search-main'>
			<div class='search-header'>
				<div class='search-form clearfix'>
					<i class='icon-search'></i> 
					<input id='search2_id' type='text' class='search-form-ipt js-search-ipt' placeholder='请输入想搜索的内容' /> 
					<span class='search-form-btn js-search-btn' onclick='lv_search2()'>搜索</span>
					<ul class='search-area-prge js-search-area-prge'></ul>
				</div>

				<!-- <ul class='hot'>
					<li>热门搜索：</li>
					<li><a href='/search?key=Oracle' target="_blank">Oracle</a>
					</li>
					<li><a href='/search?key=mysql' target="_blank">sql</a></li>
					<li><a href='/search?key=java' target="_blank">java</a></li>
				</ul> -->
			</div>

			<div class='search-body'  id="sousuo">
				<div class="search-related">  &nbsp;&nbsp;  
						<b id="lv_currentPage"></b>
						<b id="lv_pages"  class="pager-cur"></b> </div>
						<h2 class="search-title">课程</h2>
				
				
				<!-- 遍历展示   开始 -->
				<div id = "videos"  >
				
				</div>
					
					
					
				
				<!-- 遍历展示   结束 -->

			</div>

			<!-- ***** -->
		</div>
		
		<div class="M-box2"></div>

	</div>
	
<!-- 页脚开始 -->
<div th:replace="footer_black"></div>

<script type="text/javascript"> 
	

	function lv_search2(){
		var name = $("#search2_id").val();
		$.ajax({
			url:"http://localhost:7002/course/like",
			type:"get",
			data:{"name":name},
			dataType:"json",
			success:function(result){
				if(result.code==0){
					$("#videos").html("");
					var courses = result.data;
					for(var i=0;i<courses.length;i++){
						var id = courses[i].id;
						var name = courses[i].name;
						var intro = courses[i].intro;
						var price = courses[i].price;
						var learnCount = courses[i].learnCount;
						var image = courses[i].image;
						str='';
						str+='<div class="course-item clearfix" id="rom">';
						str+='	<div class="course-item-left">';
						str += '<a href="/user/course?cid='+id+'">';
						str+='			<img src="/img/course/'+image+'" width="210" height="120" />';
						str+='		</a>';
						str+='	</div>';
						str+='	<div class="course-item-right">';
						str+='		<div class="course-item-title">';
						str+='			<span class="type">[课程]</span> <a href="/user/course?cid='+id+'" target="_blank">'+name+'</a>';
						str+='		</div>';
						str+='		<div class="tag">';
						str+='			<span>Java</span> <strong class="strongMargin"></strong> <strong>'+learnCount+'人学习</strong>';
						str+='		</div>';
						str+='		<p class="content">';
						str+='			<span>课程简介：</span>'+intro;
						str+='		</p>';
						str+='	</div>';
						str+='</div>';
						$("#videos").append(str);
					}
				}else{
					alert("抱歉,暂未找到您的需求");
					window.location.reload();
				}
				
			}
		});
	}
		
		














</script>











</body>
</html>